<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="loginview" alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.petralibrarymanager.LoginController">
   <children>
      <Label text="Login to Petra Library Manager">
         <font>
            <Font name="AGaramondPro-Bold" size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="50.0" />
         </VBox.margin>
      </Label>
      <Label text="Username or Email" />
      <TextField fx:id="identifierField" prefHeight="25.0" prefWidth="145.0">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <Label text="Password">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="passwordField" />
      <Label fx:id="messageLabel" layoutX="136.0" layoutY="198.0" text="The username/email or password is not found. Please try again!" textFill="#b53333">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
      <Button fx:id="loginButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onLoginClicked" text="LOGIN">
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="50.0" left="20.0" right="20.0" top="50.0" />
   </padding>
</VBox>
